{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["warn", "tab", { "SwitchCase": 1 }],
        "no-extra-semi": "error",
        "no-shadow": "warn",
        "comma-dangle": ["error", "never"],
        "no-unused-vars": "warn"
    }
}